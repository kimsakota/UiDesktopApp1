<UserControl x:Class="QuanLyKhoHang.Views.UserControls.SanPham.SuaSanPhamPageHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyKhoHang.Views.UserControls.SanPham"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             DataContext="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Page}}">
    <Grid Margin="0,2,0,-15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Sửa sản phẩm"
           Grid.Column="0"
           VerticalAlignment="Center"
           FontSize="24"
           FontWeight="Bold"
           Margin="20,10,0,10"/>
        <StackPanel Grid.Column="1"
            VerticalAlignment="Center"
            Orientation="Horizontal"
            HorizontalAlignment="Right">
            <ui:Button Content="Hủy"
                   Command="{Binding CancelCommand}"
                   Margin="5,10,5,10">
                <ui:Button.Icon>
                    <ui:SymbolIcon FontSize="17" Symbol="Dismiss16"/>
                </ui:Button.Icon>
            </ui:Button>
            <ui:Button Content="Lưu" 
                   IsEnabled="{Binding IsSave}"
                   Command="{Binding SaveCommand}"
                   Appearance="Primary"
                   Margin="5,10,15,10">
                <ui:Button.Icon>
                    <ui:SymbolIcon FontSize="17" Symbol="Save24"/>
                </ui:Button.Icon>
            </ui:Button>
        </StackPanel>
    </Grid>
</UserControl>
