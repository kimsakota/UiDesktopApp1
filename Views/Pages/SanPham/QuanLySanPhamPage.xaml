<Page x:Class="QuanLyKhoHang.Views.Pages.SanPham.QuanLySanPhamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyKhoHang.Views.Pages.SanPham"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:beh="clr-namespace:QuanLyKhoHang.Behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuanLySanPhamPage">
    <Page.Resources>
        <beh:ZeroToCollapsedConverter x:Key="ZeroToCollapsedConverter"/>
    </Page.Resources>

    <StackPanel Orientation="Vertical">
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ui:TextBox Width="200" Height="36" Margin="0,0,10,0"
                         PlaceholderText="Tìm kiếm"
                         Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <ComboBox Width="200" Height="36" ItemsSource="{Binding Categories}"
                  SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                  DisplayMemberPath="Name" Margin="0,0,10,0" />
                <Button Content="Làm mới" Command="{Binding LoadDataCommand}" Width="100" Height="36"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"  Margin="0,0,0,10" 
                        Visibility="{Binding SelectedCount, Converter={StaticResource ZeroToCollapsedConverter}}">
                <TextBlock Text="{Binding SelectedCount, StringFormat='Đã chọn {0} sản phẩm'}" FontWeight="Bold" VerticalAlignment="Center" />
                <Button Content="Hủy chọn" Command="{Binding SelectAllCommand}" Margin="10,0" />
                <Button Content="Xóa đã chọn" Command="{Binding DeleteSelectedCommand}" Margin="10,0" Background="Red" Foreground="White" />
            </StackPanel>

            <Border>
                <ui:DataGrid ItemsSource="{Binding ProductsView}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             CanUserDeleteRows="False"    
                             CanUserResizeColumns="False"
                             CanUserResizeRows="False"
                             CanUserReorderColumns="False"
                             IsReadOnly="True"
                             SelectionMode="Extended"
                             HeadersVisibility="All"
                             RowHeight="56"
                             AlternatingRowBackground="#F8F9FB"
                             BorderThickness="1"
                             BorderBrush="#DDD">


                    <ui:DataGrid.TextColumnElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Padding" Value="8,0"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </ui:DataGrid.TextColumnElementStyle>

                    <ui:DataGrid.Columns>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.Header>
                                <CheckBox IsChecked="{Binding DataContext.IsAllItemsSelected, 
                                                               RelativeSource={RelativeSource AncestorType={x:Type local:QuanLySanPhamPage}}, 
                                                               Mode=TwoWay, 
                                                               UpdateSourceTrigger=PropertyChanged}"/>
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTemplateColumn Header="Hình ảnh" Width="90">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Padding="4">
                                        <Image Source="{Binding Image}"
                                               Width="48"
                                               Height="48"
                                               Stretch="UniformToFill"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               ClipToBounds="True"
                                               SnapsToDevicePixels="True"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>         
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <DataGridTextColumn Header="Tên sản phẩm" Binding="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" Width="*" />
                        <DataGridTextColumn Header="Mã số" Binding="{Binding ProductCode, Mode=TwoWay}" Width="100" />
                        <DataGridTextColumn Header="Giá vốn" Binding="{Binding CostPrice, Mode=TwoWay, StringFormat={}{0:N0} ₫}" Width="Auto" />
                        <DataGridTextColumn Header="Giá bán" Binding="{Binding SalePrice, Mode=TwoWay, StringFormat={}{0:N0} ₫}" Width="Auto" />
                        <DataGridTextColumn Header="Danh mục" Binding="{Binding Category.Name, Mode=TwoWay}" Width="Auto" />
                        <DataGridTextColumn Header="Ngày hết hạn" Binding="{Binding ExpiryDate, StringFormat={}{0:dd/MM/yyyy}}" Width="Auto" />

                        <DataGridTemplateColumn Header="Sửa" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ui:Button Content="Sửa"
                                               Icon="Pen24"
                                               Appearance="Transparent"
                                               Command="{Binding DataContext.EditProductCommand, 
                                                                 RelativeSource={RelativeSource AncestorType={x:Type local:QuanLySanPhamPage}}}"
                                               CommandParameter="{Binding}"/>    
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </ui:DataGrid.Columns>
                </ui:DataGrid>
            </Border>
        </StackPanel>
    </StackPanel>
</Page>