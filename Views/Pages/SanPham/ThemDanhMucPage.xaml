<Page x:Class="QuanLyKhoHang.Views.Pages.SanPham.ThemDanhMucPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyKhoHang.Views.Pages.SanPham"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Transparent"
      
      Title="ThemDanhMucPage">

    <Border Width="400" Height="200" BorderBrush="CadetBlue" BorderThickness="1" CornerRadius="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Thêm danh mục" FontSize="20" FontWeight="Bold" Margin="0,0,0,16"/>

            <TextBlock Text="Tên danh mục" />
            <TextBox Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="350" Margin="0,4,0,12"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <ui:Button Content="Hủy" Width="100" 
                    Command="{Binding CancelCommand}"/>
                <ui:Button Content="Lưu" Width="100" Margin="12,0,0,0"
                        Command="{Binding SaveCommand}"
                        IsEnabled="{Binding IsSave}"
                        Appearance="Primary"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Page>
